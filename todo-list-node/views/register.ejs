<%- include('./partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Register</h3>
            </div>
            <div class="card-body">
                <form id="registerForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    </div>

                    <!-- Password Strength -->
                     <div style="display: none;" id="password-strength-div">
                        <p>Password Strength</p>
                        <progress id="password-strength" value="0" max="4"></progress>
                        <div id="password-strength-text"></div>
                     </div>

                    <!-- Honeypot field -->
                    <div class="mb-3" style="display: none;">
                        <label for="honeypot" class="form-label">Leave this field empty</label>
                        <input type="text" class="form-control" id="honeypot" name="honeypot">
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                    <div id="error-message" class="text-danger mt-2"></div>
                </form>
                <hr>
                <div class="text-center">
                    <a href="/login">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
<script src="/js/firebase-config.js"></script>
<script src="/js/register.js"></script>

<%- include('./partials/footer') %>