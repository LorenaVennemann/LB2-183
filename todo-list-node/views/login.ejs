<%- include('./partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Login</h3>
            </div>
            <div class="card-body">
                <div id="mfaContainer" class="mb-4" style="display:none;">
                    <h4>Two-Factor Authentication</h4>
                    <p>Enter the verification code sent to your phone</p>
                    <div class="mb-3">
                        <label for="verificationCode" class="form-label">Verification Code</label>
                        <input type="text" id="verificationCode" class="form-control" />
                    </div>
                    <button id="verifyMfaCode" class="btn btn-primary">Verify Code</button>
                    <div id="mfa-error-message" class="text-danger mt-2"></div>
                </div>

                <form id="loginForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" id="loginButton" class="btn btn-primary">Login</button>
                        <button type="button" id="googleSignIn" class="btn btn-outline-primary">
                            <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" width="18" class="me-2">
                            Continue with Google
                        </button>
                    </div>
                    <div id="recaptcha-container" class="mt-3"></div>
                    <div id="error-message" class="text-danger mt-2"></div>
                </form>
                <hr>
                <div class="text-center">
                    <a href="/auth/register">Need an account? Register</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
<script src="/js/firebase-config.js"></script>
<script src="/js/login.js"></script>

<%- include('./partials/footer') %>